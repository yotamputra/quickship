<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Item</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 font-sans leading-normal tracking-normal">

    <!-- Navbar -->
    <%- include('_navbar') %>

    <div class="max-w-4xl mx-auto p-6 bg-white shadow-lg rounded-lg mt-8">
      <h2 class="text-2xl font-semibold text-gray-800 mb-6">Edit Item</h2>

      <!-- Error Messages -->
      <% if (errors) { %>
        <div class="bg-red-100 text-red-600 border border-red-400 p-3 rounded mb-6">
          <strong><%= errors.join(", ") %></strong>
        </div>
      <% } %>

      <!-- Edit Item Form -->
      <form method="POST" action="/items/<%= item.id %>/edit">
        <div class="mb-4">
          <label for="name" class="block text-lg font-medium text-gray-700">Item Name:</label>
          <input
            type="text"
            id="name"
            name="name"
            value="<%= item.name %>"
            required
            class="w-full p-3 mt-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-600"
          />
        </div>

        <div class="mb-4">
          <label for="courierNote" class="block text-lg font-medium text-gray-700">Courier Note:</label>
          <textarea
            id="courierNote"
            name="courierNote"
            class="w-full p-3 mt-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-600"
            rows="4"
          ><%= item.courierNote %></textarea>
        </div>

        <div class="mb-4">
          <label for="imgURL" class="block text-lg font-medium text-gray-700">Image URL:</label>
          <input
            type="url"
            id="imgURL"
            name="imgURL"
            value="<%= item.imgURL %>"
            required
            class="w-full p-3 mt-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-600"
          />
        </div>

        <div class="mt-6">
          <button type="submit" class="w-full py-3 px-6 bg-indigo-600 text-white font-semibold rounded-md hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-600">
            Update Item
          </button>
        </div>
      </form>
    </div>

  </body>
</html>
