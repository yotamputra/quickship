<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Items</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">

  <%- include('_navbar') %>

  <!-- Add Item Button -->
  <div class="max-w-7xl mx-auto p-4">
    <form action="/items/add" method="get">
      <button type="submit" class="bg-green-600 hover:bg-green-500 text-white px-6 py-2 rounded-md shadow-md">Add Item</button>
    </form>
  </div>

  <!-- Items Title -->
  <h1 class="text-3xl font-semibold text-gray-800 text-center mt-10">Items</h1>

  <!-- Items Grid -->
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8 mt-8 px-6">

    <% items.forEach(item => { %>
      <div class="card bg-white rounded-lg shadow-lg overflow-hidden">
        <img src="<%= item.imgURL %>" alt="<%= item.name %>" class="w-full h-48 object-cover">
        <div class="p-4">
          <p class="card-title text-xl font-semibold text-gray-800"><%= item.name %></p>
          <p class="card-note text-sm text-gray-600 mt-2"><%= item.courierNote %></p>
        </div>
      </div>
    <% }) %>
    
  </div>

</body>
</html>
